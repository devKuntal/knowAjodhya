<% layout('layout/boilerplate') -%>
<div class="container mt-3 rounded-4 hero">
  <div class="container-md overflow-auto">
    <div class="row align-items-center justify-content-between">
      <div class="col-md-6 col-lg-8 p-5 text-center text-md-start">
        <h1 class="display-3 fw-bold text-white">
          Know Ajodhya Hills and it's surroundings
        </h1>
        <p class="text-white">
          Places to visit in Ajodhya Hills, you can find all the details here
        </p>
        <a href="/places"
          ><button class="btn btn-lg btn-primary px-4">Find Places</button></a
        >
      </div>
      <div class="col-md-6 col-lg-4 px-5">
        <div class="card rounded-4 my-5">
          <form
            action="/register"
            class="needs-validation m-3"
            method="post"
            novalidate
          >
            <div class="mb-3">
              <h3 class="text-center text-primary">Add a Known Place</h3>
            </div>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                name="username"
                id="username"
                placeholder="username"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                placeholder="someone@email.com"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="password"
                placeholder="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <div class="d-grid gap-2">
                <button class="btn btn-success">Register</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container" style="height: 50px"></div>
<div class="container my-5">
  <div class="row align-items-center">
    <div class="col-md-6">
      <h1 class="display-2">About <br />Ajodhya Hills</h1>
    </div>
    <div class="col-md-6">
      <p>
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Explicabo, hic
        dignissimos eius reprehenderit nostrum labore similique nobis eaque
        illum alias rerum, ratione distinctio voluptatem amet mollitia.
        Consectetur suscipit illum animi.
      </p>
    </div>
  </div>
</div>
<div class="container" style="height: 50px"></div>

<div class="container my-5">
  <div class="row text-center my-5">
    <div class="col">
      <h1 class="display-4">Top Places</h1>
    </div>
  </div>
  <div class="row my-5">
    <div id="topplacescarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="row">
            <% for (place of featuredPlace) { %>
            <div class="col-md-4 mb-3">
              <div class="card text-center rounded-4">
                <% if(place.images.length) {%>
                <img
                  src="<%= place.images[0].url %> "
                  class="card-img-top"
                  alt="..."
                />
                <% } else {%>
                <img
                  src="https://res.cloudinary.com/dqsjjbp5w/image/upload/v1673980358/YelpCamp/f9nypqoskoraz62rczbn.jpg"
                  class="img-fluid rounded-start"
                  alt="..."
                />
                <% } %>
                <div class="card-body">
                  <h5 class="card-title mb-3"><%= place.title %></h5>
                  <a href="places/<%= place._id %>" class="btn btn-primary mb-3"
                    >View Details</a
                  >
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
        <div class="carousel-item">
          <div class="row">
            <% for (place of secondFeatured) { %>
            <div class="col-md-4 mb-3">
              <div class="card text-center rounded-4">
                <% if(place.images.length) {%>
                <img
                  src="<%= place.images[0].url %> "
                  class="card-img-top"
                  alt="..."
                />
                <% } else {%>
                <img
                  src="https://res.cloudinary.com/dqsjjbp5w/image/upload/v1673980358/YelpCamp/f9nypqoskoraz62rczbn.jpg"
                  class="img-fluid rounded-start"
                  alt="..."
                />
                <% } %>
                <div class="card-body">
                  <h5 class="card-title mb-3"><%= place.title %></h5>
                  <a href="places/<%= place._id %>" class="btn btn-primary mb-3"
                    >View Details</a
                  >
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#topplacescarousel"
        data-bs-slide="prev"
      >
        <span
          class="carousel-control-prev-icon btn btn-primary"
          aria-hidden="true"
        ></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#topplacescarousel"
        data-bs-slide="next"
      >
        <span
          class="carousel-control-next-icon btn btn-primary"
          aria-hidden="true"
        ></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>
