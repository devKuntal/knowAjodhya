<!-- ejs-mate llayout  -->
    <% layout('layout/boilerplate') -%>

    <div class="card mb-3">
        <img src="<%= camp.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h1 class="card-title"><%= camp.title %></h1>
          <h5  class="card-text"><%= camp.location %></h5>
          <p class="card-text"><small class="text-muted fw-bold">Created by <%= camp.author.username %> </small></p>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">$ <%= camp.price %> /night</p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          <a href="/campgrounds" class="btn btn-primary">All Campgrounds</a>
          <!-- if current user is author of the campground then show edit and delete button if nobody sign in it will work-->
          <% if (currentUser && camp.author.equals(currentUser._id)) { %> 
          <a href="/campgrounds/<%= camp._id %>/edit" class="btn btn-warning">Edit</a>
          <form action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-danger">Delete</button>
          </form>
          <% } %> 
        </div>
      </div>
      <% if (currentUser) { %> 
      <div class="card mb-3">
        <h3 class="m-3">Write A Review</h3>
        <form action="/campgrounds/<%= camp._id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="m-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="rating" required>
            <div class="invalid-feedback">
              Please write a review.
            </div>
          </div>
          <div class="m-3">
            <label for="body" class="form-label">Write something</label>
            <textarea name="review[body]" id="body" class="form-control" cols="30" rows="3" required></textarea>
            <div class="invalid-feedback">
              Please write a review.
            </div>
          </div>
          <div class="m-3">
            <button class="btn btn-success">Submit</button>
          </div>
        </form>
      </div>
      <% } %> 

        <%  for (let review of camp.reviews) { %>
          <div class="card mb-3">
            <div class="m-3">
              <h5 class="card-text">Rating: <%= review.rating %></h5>
              <p class="card-subtitle text-muted">by <%= review.author.username %></p>
              <p class="card-text"><%= review.body %> </p>
            </div>
            <% if (currentUser && review.author.equals(currentUser._id)) { %>
            <div class="m-3">
              <form action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
            <% } %> 
          </div>
          <% } %>  