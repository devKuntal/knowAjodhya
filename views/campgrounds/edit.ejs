<!-- ejs-mate layout  -->
<% layout('layout/boilerplate') -%>
    <div class="container my-5">
        <div class="row justify-content-evenly">
            <div class="col-md-6">
                <img src="<%= camp.image %> " alt="" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h1 class="text-primary">Edit Campground</h1>
                <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post" class="needs-validation"  novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Name of the campground</label>
                        <input type="text" class="form-control" name="campground[title]" id="title" placeholder="title"
                            value="<%= camp.title %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Camp Location</label>
                        <input type="text" class="form-control" name="campground[location]" id="location"
                            placeholder="location" value="<%= camp.location %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">$</span>
                            <input type="number" class="form-control" name="campground[price]" id="price"
                                placeholder="0.00" value="<%= camp.price %>" required>
                                <div class="invalid-feedback">
                                    Please insert a number.
                                  </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Camp Image url</label>
                        <input type="text" class="form-control" name="campground[image]" id="image"
                            placeholder="https://example.com/image" value="<%= camp.image %>" required>
                            <div class="invalid-feedback">
                                Please choose a url.
                              </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description of the camp</label>
                        <textarea name="campground[description]" id="description" rows="3" class="form-control"
                            placeholder="Give a beautiful description" required><%=camp.description%></textarea>
                            <div class="invalid-feedback">
                                Please give a Desvription.
                              </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Update</button>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
