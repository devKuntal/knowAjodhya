<!-- ejs-mate layout  -->
<% layout('layout/boilerplate') -%>
<div class="container my-5 mt-3">
  <div class="row justify-content-evenly">
    <div class="col-md--6">
      <img src="" alt="" class="img-fluid" />
    </div>
    <div class="col-md-6">
      <h1 class="text-primary">Add a New Place</h1>
      <form
        action="/places"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <!-- I'm going to group things under campground.
                    So if I have multiple campground, square brackets, something else, title location.
                    When our data is sent via post request to our express app to the server, everything in the request
                    dot body will be stored under campground. -->
        <div class="mb-3">
          <label for="title" class="form-label">Name of the Place</label>
          <input
            type="text"
            class="form-control"
            name="place[title]"
            id="title"
            placeholder="title"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="latLocation" class="form-label">latitude</label>
          <input
            type="number"
            step="0.000001"
            class="form-control"
            name="place[latitude]"
            id="latLocation"
            placeholder="latitude"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please insert only numbers</div>
        </div>
        <div class="mb-3">
          <label for="longLocation" class="form-label">longitude</label>
          <input
            type="number"
            step="0.000001"
            class="form-control"
            name="place[longitude]"
            id="longLocation"
            placeholder="longitude"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please insert only numbers</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Please upload image</label>
          <input
            type="file"
            class="form-control"
            name="image"
            id="image"
            multiple
          />
          <div class="invalid-feedback">Please select a image.</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"
            >Description of the Place</label
          >
          <textarea
            name="place[description]"
            id="description"
            rows="3"
            class="form-control"
            placeholder="Give a beautiful description"
            required
          ></textarea>
          <div class="invalid-feedback">Please give a Description.</div>
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Submit</button>
          <a href="/places" class="btn btn-danger">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
