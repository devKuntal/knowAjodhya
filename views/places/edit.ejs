<!-- ejs-mate layout  -->
<% layout('layout/boilerplate') -%>
<div class="container my-5 mt-3">
  <div class="row justify-content-evenly">
    <div class="col-md-6">
      <img src="<%= place.images[0].url %> " alt="" class="img-fluid" />
    </div>
    <div class="col-md-6">
      <h1 class="text-primary">Edit Campground</h1>
      <form
        action="/places/<%= place._id %>?_method=PUT"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Name of the Place</label>
          <input
            type="text"
            class="form-control"
            name="place[title]"
            id="title"
            placeholder="title"
            value="<%= place.title %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Place Location</label>
          <input
            type="text"
            class="form-control"
            name="place[location]"
            id="location"
            placeholder="location"
            value="<%= place.location %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="latLocation" class="form-label">latitude</label>
          <input
            type="number"
            step="0.000001"
            class="form-control"
            name="place[latitude]"
            id="latLocation"
            placeholder="latitude"
            value="<%= place.latitude %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please insert only numbers</div>
        </div>
        <div class="mb-3">
          <label for="longLocation" class="form-label">longitude</label>
          <input
            type="number"
            step="0.000001"
            class="form-control"
            name="place[longitude]"
            id="longLocation"
            placeholder="longitude"
            value="<%= place.longitude %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please insert only numbers</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Add More Image</label>
          <input
            type="file"
            class="form-control"
            name="image"
            id="image"
            multiple
          />
          <div class="invalid-feedback">Please select a image.</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"
            >Description of the Place</label
          >
          <textarea
            name="place[description]"
            id="description"
            rows="3"
            class="form-control"
            placeholder="Give a beautiful description"
            required
          >
<%=place.description%></textarea
          >
          <div class="invalid-feedback">Please give a Description.</div>
        </div>
        <div class="mb-3 d-flex">
          <% place.images.forEach(function(img, i) { %>
          <div class="card m-3" style="width: 10rem">
            <img src="<%= img.thumbnail%>" class="img-thumbnail" alt="" />
            <div class="form-check-inline ps-3">
              <input
                type="checkbox"
                id="image-<%=i%>"
                name="deleteImages[]"
                value="<%= img.filename %>"
              />
            </div>
            <label class="ps-3" for="image-<%=i%>">Delete ?</label>
          </div>
          <% }) %>
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Update</button>
          <a href="/places/<%= place._id %>" class="btn btn-danger">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
